/**
 * Or gate:
 * out = 1 if (a == 1 or b == 1)
 *       0 otherwise
 */

CHIP Or {
    IN a, b;
    OUT out;

    PARTS:
        /**
         * Or(a, b) = Nand(Nand(a, a), Nand(b, b))
         */
        Nand(a=a, b=a, out=outA);
        Nand(a=b, b=b, out=outB);
        Nand(a=outA, b=outB, out=out);
}
